% Math LaTeX class

% the following two lines are required
% to make the class
\NeedsTeXFormat{LaTeX2e}
\ProvidesClass{mymathclass}


\LoadClass[12pt]{article} 


% load in some commonly needed packages 
\RequirePackage{ifthen,amsmath,amssymb,
    amsthm,bm,graphicx,color, yfonts, enumitem}
    
\RequirePackage{hyperref}
\hypersetup{
    colorlinks,
    citecolor=black,
    filecolor=black,
    linkcolor=black,
    urlcolor=black
}

\newtheorem{problem}{Problem}

\newcommand{\trace}[1]{\textrm{trace}(#1)}
% new page before section
\AddToHook{cmd/section/before}{\clearpage}

% remove section numbers in table of contents
\setcounter{secnumdepth}{0}

